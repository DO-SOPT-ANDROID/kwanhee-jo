<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--DialogFragment Style-->
    <style name="DialogFragmentFullScreen">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!--TextField Style-->
    <style name="TextFieldCounterAndEndClear">
        <item name="boxStrokeColor">@color/color_4f73dd</item>
        <item name="counterEnabled">true</item>
        <item name="endIconMode">clear_text</item>
    </style>
    <!--Material3 Switch Style-->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/m3_switch_thumb</item>
        <item name="trackTint">@color/m3_switch_track</item>
    </style>
</resources>