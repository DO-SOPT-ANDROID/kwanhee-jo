<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="1"
        android:contentDescription="@string/profile_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_personpin_ababab_24" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_update_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/ic_circle_24"
        android:tint="@color/color_f44336"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/iv_user"
        app:layout_constraintTop_toTopOf="@id/iv_user"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/tv_user_description"
        app:layout_constraintEnd_toStartOf="@id/iv_status"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_user"
        app:layout_constraintTop_toTopOf="@id/iv_user"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="SOPT YB 조관희" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_birthdaycake"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:layout_constraintEnd_toStartOf="@id/tv_status_message"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_user_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_a3a3a3"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/iv_user"
        app:layout_constraintEnd_toStartOf="@id/tv_status_message"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_user"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        tools:text="설명" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_stroke_4ecc00_2_corners_50"
        android:drawableEnd="@drawable/ic_playarrow_ffffff_24"
        android:drawablePadding="4dp"
        android:drawableTint="@color/color_4ecc00"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="150dp"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="6dp"
        android:paddingVertical="5dp"
        android:textColor="@color/color_7c7c7c"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_user"
        tools:text="상태메시지"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>